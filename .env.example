# Database Configuration
DATABASE_URL=postgresql://proxy_user:proxy_password@localhost:5432/mobile_proxy
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=10

# Security Settings
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
API_KEY_LENGTH=32

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
PROXY_HOST=0.0.0.0
PROXY_PORT=8080

# Proxy Settings
DEFAULT_ROTATION_INTERVAL=600
MAX_DEVICES=50
MAX_REQUESTS_PER_MINUTE=100
REQUEST_TIMEOUT_SECONDS=30
MAX_CONCURRENT_CONNECTIONS=100
BUFFER_SIZE=8192

# Monitoring Settings
HEALTH_CHECK_INTERVAL=30
HEARTBEAT_TIMEOUT=60
LOG_RETENTION_DAYS=30
METRICS_RETENTION_DAYS=90
LOG_LEVEL=INFO

# Rotation Settings
MAX_ROTATION_ATTEMPTS=3
ROTATION_TIMEOUT_SECONDS=60
ROTATION_RETRY_DELAY_SECONDS=10

# External Services (optional)
TELEGRAM_BOT_TOKEN=
SLACK_WEBHOOK_URL=

# Development Settings
DEBUG=false
RELOAD=false

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379